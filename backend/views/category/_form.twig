{{ use('yii/widgets/ActiveForm') }}

<div class="category-form">
	
	{% set form=active_form_begin() %}
	<div class="box box-default">
		<div class="box-body with-border">
			{{ form.field(model, 'title').textinput() | raw }}
			{{ form.field(model, 'name') | raw }}
			{{ form.field(model, 'parentId').dropdownlist(list) | raw }}
			{{ form.field(model, 'description').textarea() | raw }}
			{{ form.field(model, 'status').checkbox | raw }}
		</div>
	</div>
	
	<div class="box box-default">
		<div class="box-header with-border">Meta</div>
		<div class="box-body with-border">
			{{ form.field(meta, 'title').textinput() | raw }}
			{{ form.field(meta, 'description').textinput() | raw }}
			{{ form.field(meta, 'keywords').textarea() | raw }}
		</div>
	</div>
	
	<div class="form-group">
		{{ html.submitButton('Save', {
			'class' : 'btn btn-primary',
		}) | raw }}
	</div>
	
	{{ active_form_end() }}

</div>
