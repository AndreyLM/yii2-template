{{ use('yii/widgets/DetailView') }}
{{ set(this, 'title', model.title) }}
{{ set(this, 'params', { 'breadcrumbs' : [
    {'label' : 'Categories', 'url' : ['index'] },
    {'label' : model.title , 'url' : ''}
    ] }) }}

<div class="category-view">

    <p>
        {{ html.a('Update',  path('update', {'id':model.id}),
            { 'class' : 'btn btn-primary' }) | raw }}
        {{ html.a('Delete', path('delete', {'id':model.id}),
            { 'class' : 'btn btn-danger', 'data' :
            { 'confirm' : 'Are you sure you want to delete this item?', 'method':'post' }
        }) | raw }}
    </p>
    
    <div class="category-view">
        
        <div class="box box-default">
            <div class="box-header">
                Main information
            </div>
            <div class="box-body">
	            
	            {{ detail_view_widget({
		            'model':model,
                    'attributes' : [
                    'id',
                    'title',
                    'name',
                    'description',
                    {
                        'attribute' : 'status',
                        'value' : isActive,
                        'format' : 'raw'
                    }
                    ],
	            }) }}
            </div>
        </div>
        
        <div class="box box-default">
            <div class="box-header">
                Meta
            </div>
            <div class="box-border">
                {{ detail_view_widget({
                    'model' : model.getMeta(),
                    'attributes' : [
                    'title',
                    'description',
                    'keywords',
                    ],
                }) }}
                
                
            </div>
        </div>
    
    </div>
</div>