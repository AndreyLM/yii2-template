{{ use('yii/widgets/DetailView') }}

{{ set(this, 'title', model.title) }}
{{ set(this, 'params', { 'breadcrumbs' : [
		{ 'label': 'Articles', 'url' : ['index'] },
		{ 'label': this.title }
	] }) }}

<div class="article-view">
	
	<p>
		{{  html.a('Update', path('update', { 'id' : model.id} ), { 'class' : 'btn btn-primary'}) | raw }}
		{{  html.a('Delete', path('delete', { 'id' : model.id } ), {
			'class' : 'btn btn-danger',
			'data' : {
				'confirm' : 'Are you sure you want to delete this item?',
				'method' : 'post',
			},
		}) | raw }}
	</p>
	
	{{ detail_view_widget({
        'model' : model,
		'attributes' : [
			'id',
			'title',
			'slug',
			{
				'attribute' : 'categoryId',
				'value' : categoryTitle
			},
			'author',
			'status',
			'favorite',
			'createdAt',
			'updatedAt',
			'publishingAt',
		],
	}) }}

</div>
