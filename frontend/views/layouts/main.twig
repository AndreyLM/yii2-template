{{ use('frontend/assets/AppAsset') }}
{{ use('yii/widgets/Breadcrumbs') }}
{{ use('yii/bootstrap/Nav') }}
{{ use('yii/bootstrap/NavBar') }}
{{ use('yiicommon/widgets/Alert') }}

{{ register_app_asset(this) }}

{{ this.beginPage() }}
<!DOCTYPE html>
<html lang="{{ app.language }}">
<head>
	<meta charset="{{ app.charset }}">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	{{ html.csrfMetaTags | raw }}
	<title>{{ html.encode(this.title) }}</title>
	{{ this.head() }}
</head>
<body>
{{ this.beginBody() }}

<div class="wrap">
	{{ nav_bar_begin({
        'brandLabel' : app.name,
		'brandUrl' : app.homeUrl,
		'options' : {
			'class' : 'navbar-inverse navbar-fixed-top',
		},
	}) }}
	
	{% set menuItems = [
		{'label' : 'Home', 'url' : path(['/site/index'])},
		{'label' : 'About', 'url' : path(['/site/about'])},
		{'label' : 'Contact', 'url' : path(['/site/contact'])},
		{'label' : 'SubItems', 'url' : path(['/#']), 'items' : [
			{'label' : 'Home', 'url' : path(['/site/index'])},
			{'label' : 'Home', 'url' : path(['/site/index'])},
			{'label' : 'Home', 'url' : path(['/site/index'])}
		]},
	] %}
	
	{% if app.user.isGuest == false %}
		{% set menuItems = menuItems|merge([
			{
				'label' : 'logout (' ~ app.user.identity.username ~ ')',
				'url' : path(['/site/logout']),
				'linkOptions' : {'data-method' : 'post'}
			}
		])
		%}
	{% else %}
		{% set menuItems = menuItems|merge([
			{'label' : 'login', 'url' : path(['/site/login'])},
			{'label' : 'login', 'url' : path(['/site/sign-up'])},
		])
		%}
	{% endif %}
	
	
	
	{{  nav_widget({
		'options' : { 'class' : 'navbar-nav navbar-right' },
		'items' : menuItems,
	}) }}
	
	{{ nav_bar_end() }}
	
	<div class="container">
		{% if this.params['breadcrumbs'] %}
			{% set breadcrumbs = this.params['breadcrumbs'] %}
		{% else %}
			{% set breadcrumbs = [] %}
		{% endif %}
		
		{{ breadcrumbs_widget({
			'links' : breadcrumbs
		}) | raw }}
		
		{{ alert_widget() }}
		{{ content | raw }}
	</div>
</div>

<footer class="footer">
	<div class="container">
		<p class="pull-left">&copy; {{ html.encode(app.name) }} {{ "now"|date("Y") }}</p>
		
		<p class="pull-right">{{ yii.powered() }}</p>
	</div>
</footer>

{{ this.endBody() }}
</body>
</html>
{{ this.endPage() }}
